<?xml version="1.0" encoding="utf-8"?>
<com.fcpunlimited.ubersport.utils.layout.SquareRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_event_icon"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:padding="8dp" />

    <TextView
        android:id="@+id/tv_event_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/iv_event_icon"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center"
        android:padding="8dp"
        android:textSize="@dimen/medium_text" />

</com.fcpunlimited.ubersport.utils.layout.SquareRelativeLayout>